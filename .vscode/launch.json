    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Google Books",
            "program": "${workspaceFolder}\\index.js",
            "args": ["books", "--phrase", "\"turing\""]
        },
        {
            "name": "test",
            "request": "launch",
            "runtimeArgs": [
                "test"
            ],
            "runtimeExecutable": "npm",
            "type": "node"
        },
        {
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "10000",
                "--colors",
                "${workspaceFolder}/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Test Unit Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "type": "pwa-node"
        },
    ]
}